@model Equipe

@{
    ViewData["Title"] = "Jogador";
}



<h1>Tela de Jogadores</h1>

<form method="post" asp-action='@Url.Action("Cadastrar")' enctype="mutipart/form-data">
   <label for="">Nome</label>
    <input type="text" name="Nome">

    <label for="">E-Mail</label>
    <input type="text" name="E-Mail">

    <select name="" id="">
        <option value="0">Selecione uma opção</option>
        @foreach (var item in ViewBag.Equipe)
        {
            <option value="0">@item.Nome</option>
        }
    </select>

    <label for="">Imagem</label>
    <input type="file" name="Equipe">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Nome</th>
        <th>Email</th>
        <th>Equipe</th>
        <th>Id</th>
    </thead>

     <tbody>

        @foreach (Jogador jogador in ViewBag.Jogador)
        {
        <tr>
            <td>@jogador.Nome</td>
            <td>@jogador.Email</td>
            <td>@jogador.IdEquipe</td>
            <td>@jogador.IdJogador</td>
            @* <td>
                <img src="/img/Jogadores/@jogador.Equipe" alt="Imagem da equipe @jogador.Nome" width="50px">
            </td> *@
        </tr>
        }

    </tbody>
</table>